grammar;

Integer: u64 = {
    Decimal,
    Hexadecimal,
    Binary,
    Octal,
};

Decimal: u64 = {
    r"[0-9]+" => u64::from_str(<>).unwrap()
};

Hexadecimal: u64 = {
    r"0x[0-9A-Fa-f]+" => u64::from_str_radix(&<>[2..], 16).unwrap(),
    r"0X[0-9A-Fa-f]+" => u64::from_str_radix(&<>[2..], 16).unwrap(),
};

Binary: u64 = {
    r"0b[01]+" => u64::from_str_radix(&<>[2..], 2).unwrap(),
    r"0B[01]+" => u64::from_str_radix(&<>[2..], 2).unwrap(),
};

Octal: u64 = {
    r"0o[0-7]+" => u64::from_str_radix(&<>[2..], 8).unwrap(),
    r"0O[0-7]+" => u64::from_str_radix(&<>[2..], 8).unwrap(),
};

Mnemonic: String = {
    r"[a-zA-Z_][a-zA-Z0-9_]*" => String::from(<>),
};

VariableName: String = {
    r"[a-zA-Z_][a-zA-Z0-9_]*" => String::from(<>),
};

Operand_Sep: () = {
    ","  => (),
}

LabelName: String = {
    r"[a-zA-Z_][a-zA-Z0-9_]*" => String::from(<>),
}

Operand: ASTOperand = {
    <o:RegisterOperand>         => ASTOperand::Register(o),
    <o:ImmediateOperand>        => ASTOperand::Immediate(o),
    <o:LabelOperand>            => ASTOperand::Label(o),
    <o:AddressOfOperand>        => ASTOperand::AddressOf(o),
    <o:MemoryAccessOperand>     => ASTOperand::MemRegisterIndirect(o),
//    MemoryAccess,
}

